{
  "name": "erianvc.dev",
  "version": "1.0.0",
  "description": "Portfolio web",
  "repository": {
    "type": "git",
    "url": "https://github.com/erianvc/erianvc.dev.git"
  },
  "keywords": [
    "portfolio",
    "svelte",
    "tailwind"
  ],
  "author": "Erick Vargas",
  "bugs": {
    "url": "https://github.com/erianvc/erianvc.dev/issues"
  },
  "homepage": "https://github.com/erianvc/erianvc.dev#readme",
  "scripts": {
    "start": "sirv public",
    "autobuild": "rollup -c -w",
    "dev": "run-p css:watch autobuild",
    "build": "npm run css:build && rollup -c",
    "format": "npx prettier --write \"{,!(public)/**/}*.{js,svelte}\"",
    "css:watch": "postcss src/tailwind.css -o public/global.css -w",
    "css:build": "cross-env NODE_ENV=production postcss src/tailwind.css -o public/global.css"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^2.3.0",
    "@rollup/plugin-commonjs": "^13.0.0",
    "@rollup/plugin-node-resolve": "^8.0.1",
    "cross-env": "^7.0.2",
    "cssnano": "^4.1.10",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.1",
    "prettier": "^2.0.5",
    "prettier-plugin-svelte": "^1.1.0",
    "rollup": "^2.17.0",
    "rollup-plugin-livereload": "^1.3.0",
    "rollup-plugin-svelte": "^5.2.3",
    "rollup-plugin-terser": "^6.1.0",
    "sirv-cli": "^1.0.1",
    "svelte": "^3.23.2",
    "svelte-preprocess": "^3.9.8",
    "svelte-scrollto": "^0.1.1",
    "tailwindcss": "^1.4.6"
  }
}
